<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>意見回饋 - Universe</title>
    <%- include('share/link'); -%>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/node_modules/sweetalert2/dist/sweetalert2.css" />
        <link rel="stylesheet" href="/css/index/P3OutBox.css">
        <style>
            body {
                margin: 0;
                padding: 0;
                background: url(/img/contact/bg.png);
                background-size: cover;
            }
            
            .contact-form {
                width: 85%;
                max-width: 600px;
                /* background: #f1f1f1; */
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                padding: 30px 40px;
                box-sizing: border-box;
                border-radius: 8px;
                text-align: center;
                /* box-shadow: 0 0 20px #000000b3; */
                font-family: "Montserrat", sans-serif;
            }
            
            .contact-form h1 {
                margin-top: 0;
                font-weight: 200;
            }
            
            .txtb {
                background-color: white;
                border: 1px solid gray;
                /* margin-left: 130px; */
                padding: 18px 18px;
                border-radius: 8px;
                text-align: left;
                width: 100%;
            }
            
            .txtb input,
            .txtb textarea {
                width: 100%;
                border: none;
                background: none;
                outline: none;
                font-size: 18px;
                margin-top: 6px;
            }
            
            .btn {
                display: inline-block;
                background: #9b59b6;
                padding: 14px 0;
                color: white;
                text-transform: uppercase;
                cursor: pointer;
                margin-top: 8px;
                width: 100%;
            }
            
            img.small {
                margin-left: -30px;
                height: 90px;
            }
            
            img.normal {
                height: 121px;
            }
            
            .return {
                width: 12vh;
                margin: 30px;
            }
            
            #backtoindex {
                width: 100%;
            }
            
            .big {
                width: 45vh;
            }
            
            .big img {
                width: 95%;
            }
            
            table {
                margin-left: -20%;
                width: 120%;
                /* text-align: left; */
            }
            
            .form-horizontal .control-label {
                padding-top: 0px;
                margin-bottom: 0;
                text-align: right;
            }
        </style>
</head>

<body>


    <%- include('share/header'); -%>
        <%- include('share/logo'); -%>
            <div class="return">
                <a href="/">
                    <img id="backtoindex" class="curHover" src="/img/index/set/outBox/返回2.png" alt="">
                </a>
            </div>

            <div class="big"><img src="/img/contact/susie.png" alt=""></div>

            <div class="contact-form">
                <img class="small" src="/img/contact/icontitle.png" alt="" style="position: absolute; left: 0px; top: 60px;">
                <img class="normal" src="/img/contact/意見回饋.png" alt="">


                <form class="form-horizontal" id="form1" name="form1" action="/contact" method="post" onclick="">



                    <fieldset>

                        <!-- Form Name -->
                        <legend> </legend>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="title"> <img class="text-bg" src="/img/contact/姓名bg.png"
              alt=""></label>
                            <div class="col-md-7">
                                <input v-model.lazy="title" style="height: 60px;" id="username" name="username" type="text" placeholder="請輸入姓名" class="form-control input-md">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="title"><img src="/img/contact/信箱.png" alt=""> </label>
                            <div class="col-md-7">
                                <input v-model.lazy="title" style="height: 60px;" id="email" name="email" type="text" placeholder="請輸入正確信箱格式" class="form-control input-md">

                            </div>
                        </div>

                        <!-- Textarea -->
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="description"> <img src="/img/contact/內容.png" alt=""></label>
                            <div class="col-md-7">
                                <textarea v-model="description" class="form-control" id="content" name="content" placeholder="請輸入內容"></textarea>
                            </div>
                        </div>
                    </fieldset>

                    <hr>

                    <input type="image" name="sendMsg" id="sendMsg" img src="/img/contact/送出.png" onclick="return CheckText()">
                    <div v-html="htmlLineBreak"></div>
                </form>
            </div>



            <script src="/js/share/share.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.28.2/sweetalert2.all.min.js"></script>
            <script type="text/javascript">
                function CheckText() {
                    if (document.form1.username.value == "") {
                        return false;
                    } else if (document.form1.email.value == "") {
                        return false;
                    } else if (document.form1.content.value == "") {
                        return false;
                    } else {
                        Swal.fire(
                            '傳送成功!',
                            '您的意見我們收到了',
                            'success'
                        );
                        return true;
                    }
                }
            </script>
 <!-- demo用 -->
 <script>
     $(".small").click(function(){
        $("#username").val("遊戲BOY");
        $("#email").val("test@gmail.com");
        $("#content").val("你們小遊戲好好玩，優惠活動好多好棒唷!");
     });
 </script>
</body>

</html>